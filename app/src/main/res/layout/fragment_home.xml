<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.Home.HomeFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:src="@drawable/animewelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvdescriptions"
        android:text="Enjoy your meal from your favorite shows"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:src="@drawable/naruto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"/>
        <ImageView
            android:src="@drawable/moomin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-35dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvpark"
        android:text="djghbdsf"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>


</LinearLayout>